{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}
    <h1>Consultation index</h1>
{% if consultations %}
    <table id="consultations" class="table table-success table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Operation</th>
                <th>DateC</th>
                <th>Poids</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
